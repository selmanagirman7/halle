@using Entity
@model List<Product>


<main>

    <!-- slider-area-start  -->
    <!-- slider-area-end -->
    <!-- portfolio-area start -->
    <section class="portfolio-area pt-110 pb-110">
        <div class="container">

            <div id="portfolio-grid" class="row grid">
                <h1>Products</h1>

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 grid-item cat2 cat4">
                        <div class="portfolio-item mb-30">
                            <div class="portfolio-wrapper">
                                <div class=" w-img">
                                    <img src="~/images/@item.ImgPath" alt="">
                                </div>
                                <div class="portfolio-caption">
                                    <p>@item.ProductName</p>
                                    <h6><a href="#">@item.ThumbDesc</a></h6>
                                </div>
                                <div class="portfolio-caption-top">
                                    <p><a href="#">@item.ProductName</a></p>
                                    <h6><a href="/Product/ProductDetail">@item.ThumbDesc</a></h6>
                                </div>
                                <div class="portfolio-caption-bottom">
                                    <a href="/Product/ProductDetail/@item.ProductId"><i class="fa-light fa-arrow-right-long"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
    </section>
    <!-- portfolio-area end -->

</main>

